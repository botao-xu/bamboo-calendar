<!--index.wxml-->
<view class="container">
  <text class="current-date">{{displayMonth}}</text>
  <swiper class="swiper" current="{{displayMonthIndex}}" circular="true" bindchange="onMonthChange">
    <swiper-item wx:for="{{months}}" wx:for-item="monthItem">
      <ul class="week">
        <li class="weekend">日</li>
        <li>一</li>
        <li>二</li>
        <li>三</li>
        <li>四</li>
        <li>五</li>
        <li class="weekend">六</li>
      </ul>
      <ul class="days">
        <li wx:for="{{monthItem.days}}" wx:key="*this" wx:for-item="dayItem">
          <text class="day">{{ dayItem.day}}</text>
        </li>
      </ul>
    </swiper-item>
  </swiper>

</view>