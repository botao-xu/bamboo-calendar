/**index.wxss**/
.container {
  display: flex;
  flex-direction: column;
  justify-content: start;
  align-self: start;
  padding: 5px;
}

.swiper {
  width: 100%;
  height: 70vh !important;
}

.current-date {
  font-size: 22px;
  padding: 10px;
  color: #588183;
  font-weight: bold;
}

.week {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  font-size: 26rpx;
}

.weekend {
  color: #588183;
}

.days {
  flex-direction: row;
  flex-wrap: wrap;
  width: 100%;
  justify-content: space-between;
  height: 500rpx !important;
}

.days li {
  float: left;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  flex: 1;
  box-sizing: border-box;
  width: 14.2857%;
  min-width: 14.2857%;
  max-width: 14.2857%;
  height: 120rpx;
  color: #161616;
  font-size: 20px;
  font-weight: bold;
  position: relative;
}

.overtime {
  font-size: 10px;
  font-weight: normal;
  position: absolute;
  top: 5px;
  right: 4px;
  color: #B0171F;
}

.days .gray {
  color: lightgray;
}

.today {
  border: 2px solid #588183;
  border-radius: 12px;
}

.selected-date {
  border: 2px solid darkgray;
  border-radius: 12px;
}

.day {
  color: #000;
}

.lunar-day {
  font-size: 12px;
  font-weight: normal;
  color: darkgray;
}

.solar-term {
  font-size: 12px;
  font-weight: normal;
  color: #588183;
}

.solar-date {
  font-size: 13px;
  font-weight: normal;
  color: black;
  margin-left: 10px;
  margin-top: 3px;
}

.solar-date-info {
  font-size: 12px;
  font-weight: normal;
  color: #696969;
  margin-left: 10px;
  margin-top: 3px;
}