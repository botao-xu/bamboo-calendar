/**index.wxss**/
.container {
  display: flex;
  flex-direction: column;
  justify-content: start;
  align-self: start;
  padding: 0;
}

.swiper {
  width: 100%;
  height: 70vh !important;
}

.current-date {
  font-size: 22px;
  padding: 10px;
  color: #588183;
  font-weight: bold;
}

.week {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  font-size: 26rpx;
}

.weekend {
  color: #588183;
}

.days {
  flex-direction: row;
  flex-wrap: wrap;
  width: 100%;
  justify-content: space-between;
  height: 500rpx !important;
}

.days li {
  float: left;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  flex: 1;
  box-sizing: border-box;
  width: 14.2857%;
  min-width: 14.2857%;
  max-width: 14.2857%;
  height: 120rpx;
  color: #161616;
  font-size: 20px;
  font-weight: bold;
}

.days .gray {
  color: lightgray;
}

.today {
  background: rgba(0, 137, 255, .1);
}

.day {
  color: #000;
}

.lunar-day {
  color: #000;
  font-size: 12px;
  font-weight: normal;
  color: #808A87;
}