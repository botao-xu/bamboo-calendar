.calendar {
  position: fixed;
  bottom: -800rpx;
  left: 0;
  width: 100%;
  background: #fff;
  z-index: 500;
  transition: bottom 0.3s ease; 
}
 
.calendar-active {
  bottom: 0;
}
 
.cld-title {
  margin: 0 auto;
  padding: 0 25rpx;
  box-sizing: border-box;
  width: 320rpx;
  height: 110rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 30rpx;
  color: #303030;
}
 
.cld-arrow {
  width: 10rpx;
  height: 20rpx;
}
 
.cld-days {
  width: 100%;
  padding: 0 25rpx;
  box-sizing: border-box;
}
 
.cld-day-item {
  display: inline-block;
  vertical-align: top;
  min-width: 100rpx;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
}
 
.backShadow {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  z-index: 499;
}